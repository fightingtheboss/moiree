<li class="mb-6 border-t border-t-indigo-700 pt-2">
  <h3 class="font-semibold text-indigo-700 mb-2">
    <%= link_to episode.title, podcast_episode_path(episode.podcast, episode) %>
  </h3>
  <% if episode.published_at %>
    <h4 date-time="<%= episode.published_at.iso8601%>" class="text-sm text-gray-500 mb-2">
      <%= episode.published_at.strftime("%B %d, %Y") %>
    </h4>
  <% end %>
  <p class="font-sentient font-light mb-2"><%= truncate(episode.summary, length: 240) %></p>
  <% if episode.edition %>
    <p class="text-xs text-gray-400 mb-2">
      Part of
      <%= link_to episode.edition.code, edition_path(episode.edition), class: "text-indigo-700 underline" %>
    </p>
  <% end %>
  <%= link_to episode.url, episode.url, target: "_blank", class: "text-xs text-gray-400" %>
</li>
