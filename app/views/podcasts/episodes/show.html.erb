<div class="max-w-prose mx-auto my-4">
  <h1 class="font-semibold text-3xl mb-2"><%= @podcast.title %></h1>
  <p class="font-sentient font-light"><%= @podcast.description %></p>

  <section class="p-4 bg-radial-gradient rounded-md shadow-lg my-4">
    <h2 class="font-semibold text-sm uppercase tracking-wider pl-2 pb-2 text-indigo-700">
      <%= @episode.title %>
    </h2>
    <article>
      <% if @episode.embed %>
        <div><%=raw @episode.embed %></div>
        <h3 class="inline-block rounded-tl-md rounded-tr-md text-sm mt-2 font-medium bg-indigo-700 text-white px-4 py-1">Show notes</h3>
        <div class="font-sentient font-light mb-2 bg-white p-4 border-indigo-700 border rounded-bl-md rounded-br-md rounded-tr-md">
          <%=raw @episode.description %>
        </div>
      <% else %>
        <h1 class="font-semibold text-2xl mb-1"><%= @episode.title %></h1>
        <p class=""><%= @episode.published_at.strftime("%B %d, %Y") if @episode.published_at %></p>
        <p class="font-sentient font-extralight"><%= @episode.description %></p>
        <a href="<%= @episode.url %>" target="_blank"><%= @episode.url %></a>
      <% end %>
    </article>
  </section>
  <%= link_to "← All episodes", podcast_path(@podcast) %>
  </div>
