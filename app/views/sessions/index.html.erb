<h1 class="font-semibold text-2xl mb-4">Devices & Sessions</h1>

<div id="sessions">
  <% @sessions.each do |session| %>
    <div id="<%= dom_id session %>">
      <p class="mb-2">
        <strong>User Agent:</strong>
        <%= session.user_agent %>
      </p>

      <p class="mb-2">
        <strong>Ip Address:</strong>
        <%= session.ip_address %>
      </p>

      <p class="mb-2">
        <strong>Created at:</strong>
        <%= session.created_at %>
      </p>

    </div>

    <%= button_to "Log out", session, method: :delete, class: "inline-block bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-1 px-2 rounded text-xs" %>

  <% end %>
</div>

<br>

<div>
  <%= link_to "Back", root_path %>
</div>
