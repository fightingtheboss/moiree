<div class="min-w-full max-w-md">
  <% if edition.errors.any? %>
    <div class="text-red-600 p-4 border-red-600 border rounded bg-red-100 mb-4">
      <h2 class="mb-4"><%= pluralize(edition.errors.count, "error") %> prohibited this Edition from being saved:</h2>

      <ul class="my-4">
        <% edition.errors.each do |error| %>
          <li class="font-medium">‚ùå&nbsp;<%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: [:admin, :festival, edition]) do |form| %>
    <div class="mb-4">
      <%= form.label :code, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :code, placeholder: "e.g. TIFF24", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
    </div>
    <div class="mb-4">
      <%= form.label :year, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.number_field :year, step: 1, min: 2023, value: 2024, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
    </div>
    <div class="mb-4">
      <%= form.label :start_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :start_date, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
    </div>
    <div class="mb-4">
      <%= form.label :end_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :end_date, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
    </div>
    <div class="mb-4">
      <%= form.label :url, "URL", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.url_field :url, placeholder: "e.g. https://tiff.net", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
    </div>
    <div class="flex items-center justify-between mt-8">
      <%= form.submit class: "bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
<% end %>
</div>
