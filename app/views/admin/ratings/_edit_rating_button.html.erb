<div class="flex justify-between items-center">
  <%= link_to(
    edit_admin_festival_edition_selection_rating_path(festival, edition, selection, rating),
    data: {
      turbo_frame: "modal",
      controller: "modal",
      action: "modal#show",
      "modal-dialog-param": "global-modal",
      "modal-target-param": dom_id(edition, :films)
    },
    class: "inline-block bg-teal-500 hover:bg-teal-700 text-white font-semibold py-1 px-2 rounded text-xs",
    id: dom_id(rating)
  ) do %>
    Your rating: <strong><%= rating.score %></strong>
  <% end %>
  <%= button_to "🗑️", admin_festival_edition_selection_rating_path(festival, edition, selection, Current.user.userable.ratings.find_by(selection: selection)), method: :delete, data: { "turbo-confirm": "Are you sure you want to delete your rating for #{selection.film.title}? This action is irreversible."} %>
</div>
