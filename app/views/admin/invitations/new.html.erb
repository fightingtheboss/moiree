<p style="color: green"><%= notice %></p>

<%= turbo_frame_tag "modal" do %>
  <h1 class="text-2xl font-semibold mb-4">Invite new admin</h1>

  <%= form_with(model: @user, url: admin_invitation_path) do |form| %>
    <%= render partial: "shared/errors", locals: { model: @user } %>

    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email, required: true, autofocus: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-xs ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
    </div>

    <div class="flex items-center justify-between mt-8">
      <%= form.submit "Send invitation", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-sm focus:outline-hidden focus:shadow-outline" %>
    </div>
  <% end %>
<% end %>

<br>

<div>
  <%= link_to "Back", root_path %>
</div>
