<div class="flex justify-between items-center mb-4 w-full">
  <h1 class="text-2xl font-bold">Festivals</h1>
  <%= link_to "New Festival", new_admin_festival_path, data: { turbo_frame: "new_festival" }, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<%= turbo_frame_tag "new_festival" %>

<ul id="festivals" class="">
  <% if @festivals.any? %>
    <%= render partial: "festival", collection: @festivals %>
  <% else %>
    <li class="border-b border-gray-200 py-2">
      No festivals yet. Add one!
    </li>
  <% end %>
</ul>
