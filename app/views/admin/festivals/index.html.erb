<div class="grid grid-cols-1 grid-rows-[auto_minmax(0,100vh)] h-screen">
  <div class="flex justify-between items-center mb-4 w-full p-4 backdrop-blur-md bg-white">
    <h1 class="text-2xl font-bold">Festivals</h1>
    <% if policy(Festival).new? %>
      <%= link_to "New Festival", new_admin_festival_path, data: { turbo_frame: "modal", controller: "modal", action: "modal#show", "modal-dialog-param": "global-modal" }, class: "bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-1 px-2 rounded text-sm" %>
    <% end %>
  </div>

  <ul id="festivals">
    <% if @festivals.any? %>
      <%= render partial: "festival", collection: @festivals %>
    <% else %>
      <li id="festivals-empty" class="flex flex-col justify-center items-center h-full">
        <p>No festivals yet.</p>
        <% if policy(Festival).new? %>
          <%= link_to "Add festival", new_admin_festival_path,
            data: {
              turbo_frame: "modal",
              controller: "modal",
              action: "modal#show",
              "modal-dialog-param": "global-modal"
            },
            class: "mt-2 inline-block bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-1 px-2 rounded text-xs"
          %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
