      <h2 class="font-semibold mb-4"><%= label %> festivals</h2>
      <ul class="grid grid-cols-1 md:grid-cols-3 md:gap-2">
        <%= render festivals %>
      </ul>
    <% end %>
  <% end %>
</section>
