  <image href="<%= image_url("moiree-logo.svg") %>" x="558" y="92" width="160" height="160" />

  <rect x="82" y="308" width="302" height="192" fill="url(#grad)" rx="10" />
  <rect x="416" y="308" width="302" height="192" fill="url(#grad)" rx="10" />
  <rect x="82" y="532" width="302" height="192" fill="url(#grad)" rx="10" />
  <rect x="416" y="532" width="302" height="192" fill="url(#grad)" rx="10" />

