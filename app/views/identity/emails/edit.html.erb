<% if Current.user.verified? %>
  <h1 class="font-semibold text-2xl mb-4">Change your email</h1>
<% else %>
  <h1 class="font-semibold text-2xl mb-4">Verify your email</h1>
  <p class="mb-4">We sent a verification email to the address below. Check that email and follow those instructions to confirm it's your email address.</p>
  <%= button_to "Re-send verification email", identity_email_verification_path, class: "inline-block bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-1 px-2 rounded text-xs mb-4" %>
<% end %>

<%= form_with(url: identity_email_path, method: :patch) do |form| %>
  <%= render partial: "shared/errors", locals: { model: @user } %>

  <div class="mb-4">
    <%= form.label :email, "New email address", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.email_field :email, required: true, autofocus: true, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
  </div>

  <div class="mb-4">
    <%= form.label :password_challenge, "Current password", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.password_field :password_challenge, required: true, autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
  </div>

  <div>
    <%= form.submit "Save changes", class: "bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
