<% description("Archive of all past festival editions covered by MOIRÉE") %>

<div class="min-h-screen flex flex-col">
  <header class="bg-radial-gradient-center py-12 px-4">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="font-black text-4xl md:text-6xl uppercase italic text-indigo-900 mb-4">Archive</h1>
      <p class="text-lg text-indigo-700 font-sentient italic">A complete history of festival coverage</p>
    </div>
  </header>

  <main class="flex-grow bg-slate-50 py-8 px-4">
    <div class="max-w-6xl mx-auto">
      <% @editions_by_year.each do |year, editions| %>
        <section class="mb-12" id="year-<%= year %>">
          <header class="sticky top-8 z-10 mb-6">
            <div class="flex items-center gap-4">
              <h2 class="font-black text-6xl md:text-8xl text-indigo-900/10"><%= year %></h2>
              <div class="flex-grow h-px bg-indigo-200"></div>
              <%= link_to year_path(year), class: "text-sm text-indigo-600 hover:text-indigo-900 font-medium" do %>
                View <%= year %> Wrapped →
              <% end %>
            </div>
          </header>

          <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
            <% editions.each do |edition| %>
              <%= link_to edition_summary_path(edition), class: "group block" do %>
                <article class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 border border-indigo-100 bg-radial-gradient">
                  <header class="mb-4">
                    <p class="text-xs uppercase tracking-wider text-indigo-500 mb-1"><%= edition.name %></p>
                    <h3 class="font-bold text-xl text-indigo-900 group-hover:text-indigo-700 transition-colors"><%= edition.code %></h3>
                    <time class="text-sm text-gray-500">
                      <%= edition.start_date.strftime("%b %d") %> – <%= edition.end_date.strftime("%b %d, %Y") %>
                    </time>
                  </header>

                  <ul class="flex flex-wrap gap-2 text-xs">
                    <li class="px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full">
                      <strong><%= edition.critics.count %></strong> Critics
                    </li>
                    <li class="px-2 py-1 bg-violet-100 text-violet-700 rounded-full">
                      <strong><%= edition.films.count %></strong> Films
                    </li>
                    <li class="px-2 py-1 bg-teal-100 text-teal-700 rounded-full">
                      <strong><%= edition.ratings.count %></strong> Ratings
                    </li>
                  </ul>
                </article>
              <% end %>
            <% end %>
          </div>
        </section>
      <% end %>

      <% if @editions_by_year.empty? %>
        <div class="text-center py-16">
          <p class="text-gray-500 text-lg">No past editions yet.</p>
        </div>
      <% end %>
    </div>
  </main>

  <%= render "shared/footer" %>
</div>
