<% description("MOIRÉE #{@year} Year in Review - The best films and festivals of #{@year}") %>

<div class="min-h-screen flex flex-col">
  <%# Hero Header with Moiré Pattern %>
  <header class="relative bg-white overflow-hidden">
    <div class="grid place-content-center bg-logo-radial-gradient contrast-2000 after:bg-logo-radial-gradient-overlay after:absolute after:top-0 after:left-0 after:right-0 after:bottom-0 after:mix-blend-lighten">
      <h1 class="font-black uppercase text-[26vw] xl:text-[22.5rem] italic leading-tight px-4">
        <span class="inline-block">Moirée</span>
      </h1>
    </div>
    <div class="absolute bottom-8 left-0 right-0 text-center">
      <p class="font-medium italic tracking-tight text-indigo-700 bg-white/80 backdrop-blur-sm md:text-xl p-2 md:p-4 inline-block rounded-full px-6">
        <%= @year %> Year in Review
      </p>
    </div>
  </header>

  <main class="grow">
    <%# Year Archive Navigation %>
    <div class="bg-indigo-50 border-b border-indigo-100 py-3 px-4">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <div class="flex items-center gap-2 text-sm">
          <%= link_to "← Back to Today", root_path, class: "text-indigo-600 hover:text-indigo-800" %>
        </div>
        <h2 class="font-bold text-indigo-900">
          <span class="text-indigo-500">Wrapped:</span> <%= @year %>
        </h2>
        <div class="flex items-center gap-2 text-sm">
          <% if @year > 2024 %>
            <%= link_to "← #{@year - 1}", year_path(@year - 1), class: "text-indigo-600 hover:text-indigo-800" %>
          <% end %>
          <% if @year < Date.current.year %>
            <%= link_to "#{@year + 1} →", year_path(@year + 1), class: "text-indigo-600 hover:text-indigo-800" %>
          <% end %>
        </div>
      </div>
    </div>

    <%# Top Films of the Year - Magazine Style %>
    <% if @top_films.any? %>
      <section class="py-12 px-4 bg-radial-gradient-center">
        <div class="max-w-6xl mx-auto">
          <header class="mb-8 text-center">
            <h2 class="font-black text-4xl md:text-5xl uppercase italic text-indigo-900 mb-2">
              Best of <%= @year %>
            </h2>
            <p class="text-indigo-600 font-sentient italic text-lg">The highest rated films from our critics</p>
          </header>

          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <% @top_films.each_with_index do |selection, index| %>
              <% film = selection.film %>
              <% featured_rating = selection.ratings.where.not(impression: [nil, ""]).order(score: :desc).first %>

              <article class="<%= index == 0 ? 'md:col-span-2 lg:col-span-1 lg:row-span-2' : '' %> bg-white rounded-lg shadow-md overflow-hidden group hover:shadow-xl transition-shadow">
                <%= link_to film_path(film), class: "block h-full" do %>
                  <%# Film Poster %>
                  <div class="relative aspect-2/3 overflow-hidden bg-indigo-100 <%= index == 0 ? 'lg:aspect-3/4' : 'hidden md:block' %>">
                    <% if film.poster_path.present? %>
                      <img
                        src="<%= TMDB.poster_url(film.poster_path, size: 'w500') %>"
                        alt="<%= film.title %> poster"
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        loading="lazy"
                      >
                    <% else %>
                      <div class="w-full h-full bg-radial-gradient flex items-center justify-center">
                        <span class="text-indigo-300 font-black text-6xl italic"><%= film.title.first %></span>
                      </div>
                    <% end %>

                    <%# Rating Badge %>
                    <div class="absolute top-3 right-3 bg-indigo-900/90 text-white rounded-full w-14 h-14 flex items-center justify-center shadow-lg">
                      <span class="font-black text-xl"><%= number_with_precision(selection.average_rating, precision: 1) %></span>
                    </div>
                  </div>

                  <%# Film Info %>
                  <div class="p-5 <%= index == 0 ? 'lg:p-6' : '' %>">
                    <header class="mb-3">
                      <h3 class="font-bold text-lg md:text-xl text-indigo-900 group-hover:text-indigo-700 transition-colors leading-tight mb-1">
                        <%= film.title %>
                      </h3>
                      <p class="text-sm text-gray-600"><%= film.director %></p>
                      <p class="text-xs text-gray-500 mt-1">
                        <%= film.countries.join(", ") %> • <%= film.year %>
                      </p>
                    </header>

                    <%# Featured Impression Quote %>
                    <% if featured_rating&.impression.present? %>
                      <blockquote class="border-l-4 border-indigo-200 pl-4 mt-4">
                        <p class="font-sentient italic text-gray-700 text-sm leading-relaxed line-clamp-3">
                          "<%= truncate(featured_rating.impression, length: 150) %>"
                        </p>
                        <footer class="mt-2 text-xs text-gray-500">
                          — <%= featured_rating.critic.name %>
                          <% if featured_rating.review_url.present? %>
                            <a href="<%= featured_rating.review_url %>" target="_blank" rel="noopener" class="ml-1 text-indigo-600 hover:underline" onclick="event.stopPropagation();">Read review →</a>
                          <% end %>
                        </footer>
                      </blockquote>
                    <% end %>
                  </div>
                <% end %>
              </article>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>

    <%# Recent Festival Spotlight %>
    <% if @recent_festival %>
      <section class="py-12 px-4 bg-slate-50">
        <div class="max-w-6xl mx-auto">
          <header class="mb-8">
            <p class="text-xs uppercase tracking-wider text-indigo-500 mb-2">Most Recent</p>
            <h2 class="font-black text-3xl md:text-4xl uppercase text-indigo-900">
              <%= @recent_festival.code %>
            </h2>
            <p class="text-gray-600 mt-1">
              <time datetime="<%= @recent_festival.end_date %>">
                <%= @recent_festival.start_date.strftime("%B %d") %> – <%= @recent_festival.end_date.strftime("%B %d, %Y") %>
              </time>
            </p>
          </header>

          <div class="grid gap-8 md:grid-cols-3">
            <%# Stats %>
            <div class="bg-white rounded-lg p-6 shadow-sm border border-indigo-100 bg-radial-gradient">
              <h3 class="font-semibold text-indigo-900 mb-4">Festival Stats</h3>
              <dl class="space-y-3">
                <div class="flex justify-between items-center">
                  <dt class="text-gray-600">Critics</dt>
                  <dd class="font-bold text-indigo-700 text-xl"><%= @recent_festival.critics.count %></dd>
                </div>
                <div class="flex justify-between items-center">
                  <dt class="text-gray-600">Films</dt>
                  <dd class="font-bold text-indigo-700 text-xl"><%= @recent_festival.films.count %></dd>
                </div>
                <div class="flex justify-between items-center">
                  <dt class="text-gray-600">Ratings</dt>
                  <dd class="font-bold text-indigo-700 text-xl"><%= @recent_festival.ratings.count %></dd>
                </div>
              </dl>
              <%= link_to edition_summary_path(@recent_festival), class: "mt-6 block text-center bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-md transition-colors" do %>
                View Full Summary →
              <% end %>
            </div>

            <%# Top rated films from this festival %>
            <div class="md:col-span-2">
              <h3 class="font-semibold text-indigo-900 mb-4">Top Rated at <%= @recent_festival.short_name %></h3>
              <div class="grid gap-3 sm:grid-cols-2">
                <% @recent_festival.selections.includes(:film).order(average_rating: :desc).limit(4).each do |selection| %>
                  <%= link_to film_path(selection.film), class: "flex items-center gap-4 bg-white rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow group" do %>
                    <% if selection.film.poster_path.present? %>
                      <img
                        src="<%= TMDB.poster_url(selection.film.poster_path, size: 'w92') %>"
                        alt=""
                        class="w-12 h-18 object-cover rounded shadow-sm hidden sm:block"
                        loading="lazy"
                      >
                    <% end %>
                    <div class="grow min-w-0">
                      <h4 class="font-medium text-indigo-900 group-hover:text-indigo-700 truncate"><%= selection.film.title %></h4>
                      <p class="text-xs text-gray-500 truncate"><%= selection.film.director %></p>
                    </div>
                    <span class="font-bold text-lg text-indigo-700"><%= number_with_precision(selection.average_rating, precision: 1) %></span>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>

    <%# Past Festivals from this Year %>
    <% if @past.any? %>
      <section class="py-12 px-4 bg-white">
        <div class="max-w-6xl mx-auto">
          <header class="mb-8 flex items-end justify-between">
            <div>
              <h2 class="font-black text-3xl md:text-4xl uppercase text-indigo-900 mb-2"><%= @year %> Coverage</h2>
              <p class="text-gray-600">All festivals from this year</p>
            </div>
            <%= link_to editions_path, class: "text-indigo-600 hover:text-indigo-800 font-semibold text-sm" do %>
              View Full Archive →
            <% end %>
          </header>

          <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
            <% @past.each do |edition| %>
              <%= link_to edition_summary_path(edition), class: "group block" do %>
                <article class="bg-slate-50 rounded-lg p-6 hover:bg-indigo-50 transition-colors border border-slate-200 h-full">
                  <header>
                    <p class="text-xs uppercase tracking-wider text-gray-500 mb-1"><%= edition.name %></p>
                    <h3 class="font-bold text-lg text-indigo-900 group-hover:text-indigo-700 transition-colors"><%= edition.code %></h3>
                    <time class="text-sm text-gray-500">
                      <%= edition.start_date.strftime("%b %Y") %>
                    </time>
                  </header>
                  <ul class="flex flex-wrap gap-2 mt-4 text-xs">
                    <li class="px-2 py-1 bg-indigo-100 text-indigo-700 rounded-full"><%= edition.films.count %> Films</li>
                    <li class="px-2 py-1 bg-teal-100 text-teal-700 rounded-full"><%= edition.ratings.count %> Ratings</li>
                  </ul>
                </article>
              <% end %>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>
  </main>

  <%= render "shared/footer" %>
</div>
