<%# Regular Film Card %>
<% film = selection.film %>
<% display_average = local_assigns.fetch(:combined_average_rating, selection.average_rating) %>
<% display_count = local_assigns.fetch(:combined_ratings_count, selection.ratings.size) %>
<article class="bg-white rounded-lg shadow-md overflow-hidden group hover:shadow-xl transition-shadow">
  <%= link_to film_path(film), class: "block h-full" do %>
    <%# Film Poster %>
    <div class="relative aspect-2/3 overflow-hidden bg-indigo-100 hidden md:block">
      <% if film.poster_path.present? %>
        <img
          src="<%= TMDB.poster_url(film.poster_path, size: 'w500') %>"
          alt="<%= film.title %> poster"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
          loading="lazy"
        >
      <% else %>
        <div class="w-full h-full bg-radial-gradient flex items-center justify-center">
          <span class="text-indigo-300/25 font-black text-6xl italic text-center"><%= film.title %></span>
        </div>
      <% end %>

      <%# Rank Badge %>
      <div class="absolute top-3 right-3 w-8 h-8 rounded-md bg-indigo-700 shadow-[inset_0_2px_4px_rgba(0,0,0,0.3)] grid place-content-center">
        <span class="font-bold text-lg text-white"><%= rank %></span>
      </div>
    </div>

    <%# Film Info %>
    <div class="p-5">
      <header class="mb-3">
        <h3 class="font-bold text-lg md:text-xl text-indigo-900 group-hover:text-indigo-700 transition-colors leading-tight mb-1">
          <%= film.title %>
        </h3>
        <p class="text-sm text-gray-600"><%= film.director %></p>
        <p class="text-xs text-gray-500 mt-1">
          <%= film.countries.join(", ") %> • <%= film.year %>
        </p>
        <p class="text-xs text-slate-500 mt-2 bg-indigo-50/85 rounded-full px-2 py-0.5 inline-block">Avg <strong><%= number_with_precision(display_average, precision: 1) %></strong> from <%= pluralize(display_count, "rating") %></p>
      </header>

      <% if selection.featured_rating&.impression.present? %>
        <blockquote class="border-l-4 border-indigo-200 pl-4 mt-4">
          <p class="font-sentient italic text-gray-700 text-sm leading-relaxed line-clamp-3">
            "<%= selection.featured_rating.impression %>"
          </p>
          <footer class="mt-2 text-xs text-gray-500">
            — <%= selection.featured_rating.critic.name %>
          </footer>
        </blockquote>
      <% end %>
    </div>
  <% end %>
</article>
